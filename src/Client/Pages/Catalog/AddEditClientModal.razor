@inject Microsoft.Extensions.Localization.IStringLocalizer<AddEditClientModal> _localizer

<EditForm Model="@AddEditClientModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            @{
                if (AddEditClientModel.Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        @_localizer["Add Client"]
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        @_localizer["Update Client"]
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                @if (AddEditClientModel.Id != 0)
                {
                    <MudItem xs="12" md="6">
                        <MudTextField Disabled For="@(() => AddEditClientModel.Id)" @bind-Value="AddEditClientModel.Id" Label="@_localizer["Id"]" />
                     </MudItem>
                }
                <MudItem xs="12" md="12">
                    <MudTextField For="@(() => AddEditClientModel.Name)" @bind-Value="AddEditClientModel.Name" Label="@_localizer["Name"]" />
                </MudItem>
                <MudItem xs="12" md="12">
                    <MudTextField For="@(() => AddEditClientModel.Document)" @bind-Value="AddEditClientModel.Document" Label="@_localizer["Document"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => AddEditClientModel.ContactInfo)" @bind-Value="AddEditClientModel.ContactInfo" Label="@_localizer["ContactInfo"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => AddEditClientModel.Telephone)" @bind-Value="AddEditClientModel.Telephone" Label="@_localizer["Telephone"]" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">@_localizer["Cancel"]</MudButton>
             @if (AddEditClientModel.Id != 0)
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Secondary">@_localizer["Update"]</MudButton>
            }
            else
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">@_localizer["Save"]</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>